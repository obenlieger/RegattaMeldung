@model IEnumerable<RegattaMeldung.Models.Boatclass>

@{
    ViewData["Title"] = "Bootsklassen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bootsklassen</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Neue Bootsklasse</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seats)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seats)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.BoatclassId">Bearbeiten</a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.BoatclassId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BoatclassId">L&ouml;schen</a>
            </td>
        </tr>
}
    </tbody>
</table>
