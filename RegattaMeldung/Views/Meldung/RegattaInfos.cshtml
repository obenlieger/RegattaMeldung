            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                Unterkunft
            </td>
            <td colspan="3">
                @Model.Accomodation
            </td>
        </tr>
        <tr>
            <td>
                Verpflegung
            </td>
            <td colspan="3">
                @Model.Catering
            </td>
        </tr>
        <tr>
            <td>
                Kommentar
            </td>
            <td colspan="3">
                @Model.Comment
            </td>
        </tr>
</table>