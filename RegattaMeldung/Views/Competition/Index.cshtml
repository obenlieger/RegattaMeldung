@model IEnumerable<RegattaMeldung.Models.Competition>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Boatclasses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raceclasses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Boatclasses.BoatclassId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raceclasses.RaceclassId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompetitionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompetitionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompetitionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
