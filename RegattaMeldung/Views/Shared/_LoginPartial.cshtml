@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity.UI
@using RegattaMeldung.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item"><a asp-area="" asp-controller="Regatta" asp-action="Index" class="nav-link">Regatta</a></li>
            <li class="nav-item"><a asp-area="" asp-controller="ReportedRaces" asp-action="Index" class="nav-link">Rennen</a></li>
            <li class="nav-item">
                <button type="submit" class="btn btn-secondary my-2 my-sm-0">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    if (ViewBag.Guid == null)
    {
        <ul class="nav navbar-nav ml-auto">
            <li><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Anmelden</a></li>
        </ul>
    }
}
