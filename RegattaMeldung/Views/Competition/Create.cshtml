@model RegattaMeldung.Models.Competition

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Competition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoatclassId" class="control-label"></label>
                <select asp-for="BoatclassId" class ="form-control" asp-items="ViewBag.BoatclassId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RaceclassId" class="control-label"></label>
                <select asp-for="RaceclassId" class ="form-control" asp-items="ViewBag.RaceclassId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="CreateAll">Wettk&auml;mpfe f&uuml;r alle Boots- und Rennklassen bilden</a>
</div>
<div>
    <a asp-action="Index">Zur&uuml;ck zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
