@model RegattaMeldung.ViewModels.RegattaVM

@{
    ViewData["Title"] = "Regatta bearbeiten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Regatta bearbeiten</h2>

<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RegattaId" />
        <table>
            <tr>
                <td><label asp-for="RegattaName" class="control-label"></label></td>
                <td>
                    <input asp-for="RegattaName" class="form-control" />
                    <span asp-validation-for="RegattaName" class="text-danger"></span>
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><label asp-for="ClubId" class="control-label"></label></td>
                <td>
                    <select asp-for="ClubId" class="form-control" asp-items="ViewBag.ClubId"></select>
                    <span asp-validation-for="ClubId" class="text-danger"></span>
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><label asp-for="RegattaVon" class="control-label"></label></td>
                <td>
                    <input asp-for="RegattaVon" class="form-control" />
                    <span asp-validation-for="RegattaVon" class="text-danger"></span>
                </td>
                <td><label asp-for="RegattaBis" class="control-label"></label></td>
                <td>
                    <input asp-for="RegattaBis" class="form-control" />
                    <span asp-validation-for="RegattaBis" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="WaterId" class="control-label"></label></td>
                <td>
                    <select asp-for="WaterId" class="form-control" asp-items="ViewBag.WaterId"></select>
                    <span asp-validation-for="WaterId" class="text-danger"></span>
                </td>
                <td><label asp-for="Waterdepth" class="control-label"></label></td>
                <td>
                    <input asp-for="Waterdepth" class="form-control" />
                    <span asp-validation-for="Waterdepth" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Startslots" class="control-label"></label></td>
                <td>
                    <input asp-for="Startslots" class="form-control" />
                    <span asp-validation-for="Startslots" class="text-danger"></span>
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><label asp-for="RegattaOldclasses" class="control-label"></label></td>
                <td>@Html.ListBox("OldclassIds", ViewBag.OldclassId as MultiSelectList, new { size = 15 })</td>
                <td><label asp-for="RegattaCompetitions" class="control-label"></label></td>
                <td>@Html.ListBox("CompetitionIds", ViewBag.CompetitionId as MultiSelectList, new { size = 15 })</td>
            </tr>
            <tr>
                <td><label asp-for="ReportText" class="control-label"></label></td>
                <td colspan="3">
                    <textarea asp-for="ReportText" class="form-control"></textarea>
                    <span asp-validation-for="ReportText" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="ReportSchedule" class="control-label"></label></td>
                <td>
                    <input asp-for="ReportSchedule" class="form-control" />
                    <span asp-validation-for="ReportSchedule" class="text-danger"></span>
                </td>
                <td><label asp-for="ReportOpening" class="control-label"></label></td>
                <td>
                    <input asp-for="ReportOpening" class="form-control" />
                    <span asp-validation-for="ReportOpening" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="ReportAddress" class="control-label"></label></td>
                <td>
                    <textarea asp-for="ReportAddress" class="form-control"></textarea>
                    <span asp-validation-for="ReportAddress" class="text-danger"></span>
                </td>
                <td><label asp-for="ReportTel" class="control-label"></label></td>
                <td>
                    <input asp-for="ReportTel" class="form-control" />
                    <span asp-validation-for="ReportTel" class="text-danger"></span>
