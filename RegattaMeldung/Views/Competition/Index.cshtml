@model IEnumerable<RegattaMeldung.Models.Competition>

@{
    ViewData["Title"] = "Wettkämpfe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wettk&auml;mpfe</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Neuer Wettkampf</a>
</p>
<p>
    <a class="btn btn-warning" asp-action="CreateAll">Wettk&auml;mpfe f&uuml;r alle Boots- und Rennklassen bilden</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Boatclasses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raceclasses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Boatclasses.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raceclasses.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CompetitionId">Edit</a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.CompetitionId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CompetitionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
