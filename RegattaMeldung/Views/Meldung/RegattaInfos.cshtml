            <td></td>
        </tr>
        <tr>
            <td>
                Bis
            </td>
            <td>
                @Model.ToDate
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                Wassertiefe
            </td>
            <td>
                @Model.Waterdepth Meter
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                Startbahnen
            </td>
            <td>
                @Model.Startslots
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                Meldung
            </td>
            <td>
                @Model.ReportText
            </td>
            <td></td>
            <td></td>
        </tr>
