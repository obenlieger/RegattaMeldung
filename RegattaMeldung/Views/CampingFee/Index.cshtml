@model IEnumerable<RegattaMeldung.Models.CampingFee>

@{
    ViewData["Title"] = "Zeltplatzgebühren";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zeltplatzgeb&uuml;hren</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Neue Geb&uuml;hr</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CampingFeeId">Bearbeiten</a> |                
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CampingFeeId">L&ouml;schen</a>
            </td>
        </tr>
}
    </tbody>
</table>
