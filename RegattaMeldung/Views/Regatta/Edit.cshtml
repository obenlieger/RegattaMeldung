            <tr>
                <td><label asp-for="Security" class="control-label"></label></td>
                <td colspan="3">
                    <textarea asp-for="Security" class="form-control"></textarea>
                    <span asp-validation-for="Security" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="ScheduleText" class="control-label"></label></td>
                <td colspan="3">
                    <textarea asp-for="ScheduleText" class="form-control"></textarea>
                    <span asp-validation-for="ScheduleText" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="RegattaStartingFees" class="control-label"></label></td>
                <td>
                    @Html.ListBox("StartingFeeIds", ViewBag.StartingFeeId as MultiSelectList, new { size = 15 })
                </td>
                <td><label asp-for="RegattaCampingFees" class="control-label"></label></td>
                <td>
                    @Html.ListBox("CampingFeeIds", ViewBag.CampingFeeId as MultiSelectList, new { size = 15 })
                </td>
            </tr>
            <tr>
                <td><label asp-for="SubscriberFee" class="control-label"></label></td>
                <td>
                    <input asp-for="SubscriberFee" class="form-control" />
                    <span asp-validation-for="SubscriberFee" class="text-danger"></span>
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><label asp-for="Accomodation" class="control-label"></label></td>
                <td colspan="3">
                    <textarea asp-for="Accomodation" class="form-control"></textarea>
                    <span asp-validation-for="Accomodation" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Comment" class="control-label"></label></td>
                <td colspan="3">
                    <textarea asp-for="Comment" class="form-control"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Catering" class="control-label"></label></td>
                <td colspan="3">
                    <textarea asp-for="Catering" class="form-control"></textarea>
